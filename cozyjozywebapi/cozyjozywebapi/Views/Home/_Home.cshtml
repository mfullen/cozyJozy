<div class="jumbotron">
    <h1>CozyJozy.net!</h1>
    <p class="lead">Welcome to CozyJozy, a place to document your child's growth.</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>*@
</div>

<div class="row" data-bind="with: stats">
    <div class="col-md-4 card">
        <div class="card-header">
            <h1>Birth Stats</h1>
        </div>
        <div class="card-padding">
            <div>
                <label>Date of Birth</label>
                <span data-bind="text: $parent.dob"></span>
            </div>
            <div>
                <label>Time Since Birth</label>
                <span data-bind="text: $parent.timeSinceBirth"></span>
            </div>
            <div>
                <label>Time Till Birthday</label>
                <span data-bind="text: $parent.timeTillBirthday"></span>
            </div>

        </div>

    </div>
    <div class="col-md-4 card">
        <div class="card-header">
            <h1>Feeding Stats</h1>
        </div>

        <div class="card-padding">
            <div>
                <label>Time Since Last feeding</label>
                <span data-bind="text: $parent.timeSinceLastFeeding"></span>
            </div>
            <div>
                <label>Number of Feedings in last 24 hours</label>
                <span data-bind="text: numberOfRecentFeedings"></span>
            </div>
            <div>
                <label>Total Feedings</label>
                <span data-bind="text: totalFeedings"></span>
            </div>
            <div>
                <label>Amount per Feed in last 24 hours</label>
                <span data-bind="text: $parent.round2Decimals(recentAmountPerFeed()) + ' mL'"></span>
                <span> or </span>
                <span data-bind="text: $parent.convertToOz(recentAmountPerFeed()) + ' oz'"></span>

            </div>
            <div>
                <label>Total Amount per Feed</label>
                <span data-bind="text: $parent.round2Decimals(totalAmountPerFeed()) + ' mL'"></span>
                <span> or </span>
                <span data-bind="text: $parent.convertToOz(totalAmountPerFeed()) + ' oz'"></span>
            </div>

            <div>
                <label>Total Amount in last 24 hours</label>
                <span data-bind="text: $parent.round2Decimals(totalRecentAmount()) + ' mL'"></span>
                <span> or </span>
                <span data-bind="text: $parent.convertToOz(totalRecentAmount()) + ' oz'"></span>
            </div>
            <p><a class="btn btn-default" data-bind="click: app.navigateToFeeding">Log Feedings &raquo;</a></p>
        </div>
    </div>



    <div class="col-md-4 card">
        <div class="card-header">
            <h1>Diaper Stats</h1>
        </div>
        <div class="card-padding">
            <div>
                <label>Time Since Last Diaper</label>
                <span data-bind="text: $parent.timeSinceLastDiaperChange"></span>
            </div>
            <div>
                <label>Number of Diaper Changes in last 24 hours</label>
                <span data-bind="text: numberOfRecentDiaperChanges"></span>
            </div>
            <div>
                <label>Total Diaper Changes</label>
                <span data-bind="text: totalDiaperChanges"></span>
            </div>
            <p><a class="btn btn-default" data-bind="click: app.navigateToDiaper">Log Diaper Changes &raquo;</a></p>
        </div>
    </div>
</div>

