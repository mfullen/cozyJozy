<!-- ko with: feedingMgt -->

<div class="card" data-bind="if: isCreatingNew() || isEditing()">
    <div class="card-body card-padding">
        <div data-bind="if: isCreatingNew">
            <div data-bind=" with: item">
                <h2>Add New Feeding</h2>


                <div class="container">
                    <div class="row">
                        <div class='col-sm-3'>
                            <div class="form-group">
                                <label for="date">Start Date Time</label>
                                <div id="date" class='input-group date datetimepicker'>
                                    <input type='text' class="form-control" data-bind="datetimepicker: startTime" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class='col-sm-3'>
                            <div class="form-group">
                                <label for="date">End Date Time</label>
                                <div id="date" class='input-group date datetimepicker'>
                                    <input type='text' class="form-control" data-bind="datetimepicker: endTime" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>





                <div>
                    <label>Delivery Type</label>
                    <select class="form-control" data-bind="options: $parent.deliveryTypes, optionsText: 'name', optionsValue: 'value', value: deliveryType "></select>
                </div>

                <div>
                    <label for="amount">Amount (mL)</label>
                    <input id="amount" data-bind="value: amount" />
                    <span data-bind="text: $parent.amountOunces() + ' oz'"></span>
                    <input type="text" class="slider form-control" data-bind="sliderValue: {value: amount, min:0, max: 400, step: 1}" />
                </div>

                <div>
                    <label>Spit up?</label>
                    <input data-bind="checked: spitUp" type="checkbox" />
                </div>

                <div>
                    <label>Notes</label>
                    <textarea data-bind='value: notes' rows='5' cols='60'> </textarea>
                </div>


                <button class="btn bgm-green btn-icon" data-bind="click: $parent.create, enable: $parent.canSave"><i class="md md-check"></i></button>
                <button class="btn bgm-red btn-icon" data-bind="click: $parent.cancel"><i class="md md-close"></i></button>
            </div>
        </div>

        <div data-bind="if: isEditing">
            <div data-bind=" with: item">
                <h2>Update Feeding</h2>
                <div>
                    <label for="feedingId" data-bind="visible: false">Id</label>
                    <label id="feedingId" data-bind="text: id, visible: false"></label>
                </div>

                <div class="container">
                    <div class="row">
                        <div class='col-sm-3'>
                            <div class="form-group">
                                <label for="date">Start Date Time</label>
                                <div id="date" class='input-group date datetimepicker'>
                                    <input type='text' class="form-control" data-bind="datetimepicker: startTime" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class='col-sm-3'>
                            <div class="form-group">
                                <label for="date">End Date Time</label>
                                <div id="date" class='input-group date datetimepicker'>
                                    <input type='text' class="form-control" data-bind="datetimepicker: endTime" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div>
                    <label>Delivery Type</label>
                    <select class="form-control" data-bind="options: $parent.deliveryTypes, optionsText: 'name', optionsValue: 'value', value: deliveryType "></select>
                </div>

                <div>
                    <label for="amount">Amount (mL)</label>
                    <input id="amount" data-bind="value: amount" />
                    <input type="text" class="slider form-control" data-bind="sliderValue: {value: amount, min:0, max: 400, step: 1}" />
                    <span data-bind="text: $parent.amountOunces() + ' oz'"></span>
                </div>

                <div>
                    <label>Spit up?</label>
                    <input data-bind="checked: spitUp" type="checkbox" />
                </div>


                <div>
                    <label>Notes</label>
                    <textarea data-bind='value: notes' rows='5' cols='60'> </textarea>
                </div>


                <button class="btn bgm-green btn-icon" data-bind="click: $parent.update, enable: $parent.canSave"><i class="md md-check"></i></button>
                <button class="btn bgm-red btn-icon" data-bind="click: $parent.cancel"><i class="md md-close"></i></button>
            </div>
        </div>
    </div>

</div>

<div class="block-header">
    <h1>Feedings</h1>
</div>

<div class="card">

    <div class="card-header">
        <div data-bind="visible: canAdd">
            <button class="btn btn-default glyphicon glyphicon-plus" data-bind="click: openNew"></button>
        </div>
        
      
        <div>
            <button class="btn bgm-amber btn-icon" data-bind="click: previousDate"><i class="md md-arrow-back"></i></button>
        </div>

        <div class="col-sm-4 input-group form-group">
            <span class="input-group-addon"><i class="md md-event"></i></span>
            <div class="dropdown fg-line">
                <input type='text' class="form-control" data-bind="datetimepicker: sDate, dateTimePickerOptions: { format: 'MM/DD/YYYY'}" data-toggle="dropdown" placeholder="Click here...">
            </div>
        </div>
        
        <div>
            <button class="btn bgm-amber btn-icon" data-bind="click: nextDate"><i class="md md-arrow-forward"></i></button>
        </div>
       

    </div>

    <div class="card-body card-padding">
        <!-- ko foreach: sortedFeedingsByDate -->
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading" data-bind="attr: spitUp() ? { style: 'background-color: yellow'} : ''">

                    <span class="panel-title" data-bind="text: moment(startTime()).format('hh:mm a MM/DD/YYYY') + ' to ' + moment(endTime()).format('hh:mm a MM/DD/YYYY')"></span>

                    <div class="pull-right">
                        <button class="btn btn-default glyphicon glyphicon-pencil" data-bind="visible: $parent.canEdit, click: $parent.edit"></button>
                        <button class="btn btn-default glyphicon glyphicon-remove" data-bind="visible: $parent.canDelete, click: $parent.deleteItem"></button>
                    </div>
                </div>
                <div class="panel-body">
                    <div data-bind="text: $parent.getText($data)"></div>
                    <div data-bind="if: spitUp"><span>This feeding has been flagged as being Spit back up or vomited</span></div>
                    <div data-bind="if: notes">Notes:<span data-bind="text: notes"></span></div>
                </div>
            </div>
        </div>
        <!-- /ko -->
    </div>

</div>
<!-- /ko -->
