<div class="card">
    <div class="card-body card-padding">
        <form class="form-horizontal" role="form">
            <h4>Change your password</h4>
            <hr />
            <ul class="text-danger" data-bind="foreach: errors">
                <li data-bind="text: $data"></li>
            </ul>
            
            <div class="form-group fg-line">
                <label for="ChangePasswordNewPassword" class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input type="text" id="ChangePasswordNewPassword" class="form-control" data-bind="value: email" />
                </div>
            </div>

            <div class="form-group fg-line">
                <label for="ChangePasswordNewPassword" class="col-md-2 control-label">New password</label>
                <div class="col-md-10">
                    <input type="password" id="ChangePasswordNewPassword" class="form-control" data-bind="value: newPassword" />
                </div>
            </div>
            <div class="form-group fg-line">
                <label for="ChangePasswordConfirmPassword" class="col-md-2 control-label">Confirm new password</label>
                <div class="col-md-10">
                    <input type="password" id="ChangePasswordConfirmPassword" class="form-control" data-bind="value: confirmPassword" />
                </div>
            </div>
            
            <div class="form-group fg-line">
                <label for="ChangePasswordNewPassword" class="col-md-2 control-label">Code</label>
                <div class="col-md-10">
                    <input type="password" id="ChangePasswordNewPassword" class="form-control" data-bind="value: code" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" data-bind="click: resetPassword, disable: changing">Change password</button>
                </div>
            </div>
        </form>
    </div>
    
    
    <div class="card-body card-padding">
        <form class="form-horizontal" role="form">
            <h4>Send email for reset</h4>
            <hr />
            <ul class="text-danger" data-bind="foreach: errors">
                <li data-bind="text: $data"></li>
            </ul>

            <div class="form-group fg-line">
                <label for="ChangePasswordNewPassword" class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input type="text" id="ChangePasswordNewPassword" class="form-control" data-bind="value: email" />
                </div>
            </div>
          
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" data-bind="click: forgotPasswordEmail, disable: changing">Change password</button>
                </div>
            </div>
        </form>
    </div>

</div>

