<div class="alert alert-success alert-dismissible" data-bind="visible: successMessages().length > 0">
    <ul data-bind="foreach: successMessages">
        <li data-bind="text: $data"></li>
    </ul>
</div>

<div class="card">
    
    <div class="card-body card-padding">
        <form class="form-horizontal" role="form">
            <h4>Enter your email to receive a password reset code. This code is only valid for 24 hours!</h4>
            <hr />

            <div class="col-md-12 col-sm-4 input-group m-b-20">
                <span class="input-group-addon"><i class="md md-email"></i></span>
                <div class="fg-line">
                    <input type="text" class="form-control" placeholder="Email" data-bind="value: email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" data-bind="click: forgotPasswordEmail, disable: changing">Send Email</button>
                </div>
            </div>
        </form>
    </div>
    
    
    <div class="card-body card-padding">
        <form class="form-horizontal" role="form">
            <h4>Change your password</h4>
            <hr />
            
            <div class="col-md-12 col-sm-4 input-group m-b-20">
                <span class="input-group-addon"><i class="md md-email"></i></span>
                <div class="fg-line">
                    <input type="text" class="form-control" placeholder="Email" data-bind="value: email">
                </div>
            </div>


            <div class="col-md-12 col-sm-4 input-group m-b-20">
                <span class="input-group-addon"><i class="md md-accessibility"></i></span>
                <div class="fg-line">
                    <input type="password" class="form-control" placeholder="New Password" data-bind="value: newPassword">
                </div>
            </div>

            <div class="col-md-12 col-sm-4 input-group m-b-20">
                <span class="input-group-addon"><i class="md md-accessibility"></i></span>
                <div class="fg-line">
                    <input type="password" class="form-control" placeholder="Confirm Password" data-bind="value: confirmPassword">
                </div>
            </div>
            
            
            <div class="col-md-12 col-sm-4 input-group m-b-20">
                <span class="input-group-addon"><i class="md md-link"></i></span>
                <div class="fg-line">
                    <input type="text" class="form-control" placeholder="Verification Code" data-bind="value: code">
                </div>
            </div>

       

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" data-bind="click: resetPassword, disable: changing">Change password</button>
                </div>
            </div>
        </form>
    </div>
</div>

<button type="submit" class="btn btn-default" data-bind="click: app.navigateToLogin">Back To Login</button>
